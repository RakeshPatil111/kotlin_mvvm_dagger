<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.kotlindemo.view.ListFragment"
        android:label="Movies"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/actionGoToDetails"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.kotlindemo.view.DetailsFragment"
        android:label="Movie Details"
        tools:layout="@layout/fragment_details">
        <action
            android:id="@+id/actionGoToList"
            app:destination="@id/listFragment" />
        <argument
            android:name="movie"
            app:argType="com.example.kotlindemo.model.Results" />
    </fragment>
</navigation>